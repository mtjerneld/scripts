# Azure Storage Configuration for Mailchecker Reports
# Copy this file to .env and fill in your actual values
# IMPORTANT: Never commit .env to git (it's in .gitignore)

# Azure Storage Account name
AZURE_STORAGE_ACCOUNT=

# Azure Storage Account Key (find in Azure Portal > Storage Account > Access Keys)
AZURE_STORAGE_KEY=

# Azure Web Zone (optional, defaults to z1 if not set)
# Check your Primary endpoint in Azure Portal to determine correct zone
# Example: https://mailsecurityreports.z1.web.core.windows.net/
AZURE_WEB_ZONE=z1

# OpenAI settings (required for -ChatGPT)
OPENAI_API_KEY=
OPENAI_MODEL=gpt-5-nano
OPENAI_BASE_URL=https://api.openai.com/v1
OPENAI_TIMEOUT_SECONDS=120

# Token & cost caps (no chunking; fail fast if exceeded)
# ~1 token â‰ˆ 4 characters for ASCII/JSON text
OPENAI_MAX_INPUT_TOKENS=20000
OPENAI_MAX_OUTPUT_TOKENS=6000
OPENAI_MAX_COST_USD_PER_RUN=0.15